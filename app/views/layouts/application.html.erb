<body>

  <header id='main-nav'>
    <nav id="logo">
      <%= link_to t('.exec_io'), root_path %>
    </nav>

    <ul id="links">
      <li class='dropdown-title'><a class="scroll-link black" data-dropdown="toggle">Menu</a></li>
