      <li><%= link_to t('.locations'), "section#locations", :class => 'blue scroll-link', "data-link" => "locations" %></li>
      <li><%= link_to t('.blog'), "section#blog", :class => 'orange scroll-link', :style => 'display: none', "data-link" => "blog" %></li>
